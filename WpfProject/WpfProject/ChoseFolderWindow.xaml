<Window x:Class="WpfProject.ChoseFolderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProject"
        mc:Ignorable="d"
        Title="ChoseFolderWindow" Height="170" Width="400">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="20"/>
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Enter folder name: " FontSize="15" />
        <TextBox  x:Name="folderName" Grid.Row="1"/>
        <WrapPanel HorizontalAlignment="Right" Grid.Row="2" Margin="15">
            <Button  x:Name="AcceptButton"  Content="Create folder" Click="AcceptButton_Click" MinWidth="50" Margin="10"/>
            <Button  IsCancel="True" x:Name="CancelButton"  Content="Cancel" MinWidth="50" Margin="10"/>
        </WrapPanel>
    </Grid>
</Window>
